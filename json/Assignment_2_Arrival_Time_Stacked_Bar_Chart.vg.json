{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Migrant Arrival Time per State",
    "font": "Dubai",
    "fontWeight": "bold",
    "fontSize": 40,
    "dy": -30
  },
  "width": 1000,
  "height": 650,
  "data": {
    "url": "https://raw.githubusercontent.com/jaidynarneill/Assignment-2-FIT3179/refs/heads/main/data/Assignment_2_Arrival_Time_Stacked_Bar_Chart.csv"
  },
  "transform": [
    {
      "fold": [
        "Arrived 5-10 years ago (%)",
        "Arrival not stated (%)",
        "Arrived over 10 years ago (%)",
        "Arrived within 5 years (%)"
      ],
      "as": ["Arrival Type", "percentage"]
    },
    {
      "filter": "datum.Year == year_selection"
    },
    {
      "calculate": "format(datum.percentage, '.0f') + '%'",
      "as": "percentage_text"
    }
  ],
  "params": [
    {
      "name": "year_selection",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2021,
        "step": 5,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "percentage",
          "type": "quantitative",
          "stack": "normalize",
          "axis": {
            "title": "% of Migrants",
            "format": ".0%",
            "labelFont": "Dubai",
            "labelFontSize": 26,
            "titleFont": "Dubai",
            "titleFontSize": 34
          }
        },
        "y": {
          "field": "Label",
          "type": "nominal",
          "axis": {
            "title": "State",
            "labelFont": "Dubai",
            "labelFontSize": 26,
            "titleFont": "Dubai",
            "titleFontSize": 34,
            "labelLimit": 1000
          }
        },
        "color": {
          "field": "Arrival Type",
          "type": "nominal",
          "scale": {
            "domain": [
              "Arrived within 5 years (%)",
              "Arrived 5-10 years ago (%)",
              "Arrived over 10 years ago (%)",
              "Arrival not stated (%)"
            ],
            "range": ["#7b3294", "#d9d9d9", "#c2a5cf", "#000000"]
          },
          "legend": {
            "title": "Arrival Time",
            "titleFont": "Dubai",
            "titleFontSize": 34,
            "labelFont": "Dubai",
            "labelFontSize": 30,
            "labelLimit": 1000
          }
        },
        "tooltip": [
          {
            "field": "Label",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "percentage",
            "type": "quantitative",
            "title": "Percentage",
            "format": ".2f"
          },
          {
            "field": "Arrival Type",
            "type": "nominal",
            "title": "Arrival Type"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "white",
        "font": "Dubai",
        "fontSize": 26,
        "fontWeight": "bold",
        "xOffset": -40
      },
      "transform": [
        {
          "filter": "datum['Arrival Type'] == 'Arrived within 5 years (%)'"
        }
      ],
      "encoding": {
        "x": {
          "field": "percentage",
          "type": "quantitative",
          "stack": "normalize"
        },
        "y": {
          "field": "Label",
          "type": "nominal"
        },
        "text": {
          "field": "percentage_text",
          "type": "nominal"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "font": "Dubai",
        "fontSize": 26,
        "fontWeight": "bold",
        "xOffset": -480
      },
      "transform": [
        {
          "filter": "datum['Arrival Type'] == 'Arrived over 10 years ago (%)'"
        }
      ],
      "encoding": {
        "x": {
          "field": "percentage",
          "type": "quantitative",
          "stack": "normalize"
        },
        "y": {
          "field": "Label",
          "type": "nominal"
        },
        "text": {
          "field": "percentage_text",
          "type": "nominal"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "font": "Dubai",
        "fontSize": 26,
        "fontWeight": "bold",
        "xOffset": -900
      },
      "transform": [
        {
          "filter": "datum['Arrival Type'] == 'Arrived 5-10 years ago (%)'"
        }
      ],
      "encoding": {
        "x": {
          "field": "percentage",
          "type": "quantitative",
          "stack": "normalize"
        },
        "y": {
          "field": "Label",
          "type": "nominal"
        },
        "text": {
          "field": "percentage_text",
          "type": "nominal"
        }
      }
    }
  ],
  "config": {
    "background": "#f5feff",
    "axis": {
      "labelFont": "Dubai",
      "titleFont": "Dubai"
    }
  }
}