{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "How Migrants are Employed",
    "font": "Dubai",
    "fontWeight": "bold",
    "fontSize": 30,
    "dy": -47.5
  },
  "width": 0,
  "height": 200,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jaidynarneill/Assignment-2-FIT3179/refs/heads/main/data/Assignment_2_Work_Categories_Sunhurst_Diagram.csv"
      },
      "transform": [
        {"filter": "datum.Year == year_selection"},
        {
          "fold": ["Employed", "Unemployment rate"],
          "as": ["Category", "Percentage"]
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 0,
        "outerRadius": 125,
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "theta": {
          "field": "Percentage",
          "type": "quantitative",
          "aggregate": "sum"
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {
            "domain": ["Employed", "Unemployment rate"],
            "range": ["#ffffbb", "black", "#E1BEE7", "#BA68C8", "#4A148C", "#d9d9d9"]
          },
          "title": ""
        },
        "tooltip": [
          {"field": "Year", "title": "Year"},
          {"field": "Category", "title": "Category"},
          {"field": "Percentage", "title": "Percentage in Category (%)", "format": ".2f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jaidynarneill/Assignment-2-FIT3179/refs/heads/main/data/Assignment_2_Work_Categories_Sunhurst_Diagram.csv"
      },
      "transform": [
        {"filter": "datum.Year == year_selection"},
        {
          "fold": ["Managers", "Professionals", "Technicians", "Community"],
          "as": ["Category", "Percentage"]
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 125,
        "outerRadius": 162.5,
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "theta": {
          "field": "Percentage",
          "type": "quantitative",
          "aggregate": "sum"
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {
            "domain": [
              "Managers",
              "Professionals",
              "Technicians",
              "Community"
            ],
            "range": ["#BA68C8", "#7B1FA2", "#4A148C", "#E1BEE7"]
          },
          "title": "Job Categories (%)"
        },
        "tooltip": [
          {"field": "Year", "title": "Year"},
          {"field": "Employed", "title": "Percentage Employed (%)", "format": ".2f"},
          {"field": "Category", "title": "Category"},
          {"field": "Percentage", "title": "Percentage in Category (%)", "format": ".2f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jaidynarneill/Assignment-2-FIT3179/refs/heads/main/data/Assignment_2_Work_Categories_Sunhurst_Diagram.csv"
      },
      "transform": [
        {"filter": "datum.Year == year_selection"},
        {
          "calculate": "datum['Employed'] + ' % Employed'",
          "as": "textLabel"
        }
      ],
      "mark": {
        "type": "text",
        "font": "Dubai",
        "fontStyle": "bold",
        "fontSize": 22,
        "dy": 35,
        "dx": 0
      },
      "encoding": {
        "theta": {
          "field": "Employed",
          "type": "quantitative"
        },
        "text": {
          "field": "textLabel",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "tooltip": [
          {"field": "Employed", "title": "Employed Percentage", "format": ".2f"},
          {"field": "Year", "title": "Year"}
        ]
      }
    }
  ],
  "config": {
    "background": "#f5feff",
    "legend": {
      "labelFontSize": 16,
      "titleFontSize": 20,
      "rowPadding": 15,
      "titleLimit": 1000,
      "labelLimit": 1000,
      "orient": "none",
      "legendY": 0,
      "legendX": -235,
      "symbolSize": 375,
      "symbolStrokeColor": "black",
      "symbolStrokeWidth": 4,
      "labelFont": "Dubai",
      "titleFontWeight":"bold"
    }
  },
  "params": [
    {
      "name": "year_selection",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2021,
        "step": 5,
        "name": "Year: "
      }
    }
  ]
}
